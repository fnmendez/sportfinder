<div>
  <div>
    <h3>Modificar tu cuenta</h3>
  </div>
  <div>
    <form action="<%= updateUrl %>" method="post">
      <input type="hidden" name="_method" value="patch" />
      <div>
        <label>Datos de usuario</label><br>
        <input type="text" name="username" value="<%= user.username %>" placeholder="Usuario">
        <input type="text" name="mail" value="<%= user.mail %>" placeholder="Email">
      </div>
      <div>
        <br><label>Datos personales</label><br>
        <input type="text" name="name" value="<%= user.name %>" placeholder="Nombre">
        <input type="text" name="surname" value="<%= user.surname %>" placeholder="Apellido">
        <input type="text" name="pid" value="<%= user.pid %>" placeholder="RUT"><br><br>
      </div>
      <div>
        <label>Foto del carné de identidad</label><br>
        <input type="file" name="photoId" accept=".jpg, .jpeg, .png"><br><br>
      </div>
      <div>
        <input type="submit" value="Actualizar">
      </div>
    </form>
  </div>
  <div id="confirmDeletion" class="modal">
    <div class="modal-content">
      <div class="modal-header">
        <span class="close">&times;</span>
        ¿Estás seguro de eliminar tu cuenta?
      </div>
      <div class="modal-body">
        <p>Esta acción no es reversible.</p>
        <div>
          <button class="left">Cancelar</button>
          <form action="<%= deleteUrl %>" method="post">
            <input type="hidden" name="_method" value="delete" />
            <input class="right danger" type="submit" value="Eliminar cuenta" />
          </form>
        </div>
      </div>
    </div>
  </div>
  <!-- Trigger/Open The Modal -->
  <button id="deleteButton">Eliminar</button>
  <div>
    <form action="<%= profileUrl %>" method="get">
        <input type="submit" value="Volver"/>
    </form>
  </div>
</div>
<script>
  var modal = document.getElementById("confirmDeletion");
  var btn = document.getElementById("deleteButton");
  var span = document.getElementsByClassName("close")[0];

  btn.onclick = function() {
    modal.style.display = "block";
  }
  span.onclick = function() {
    modal.style.display = "none";
  }
  window.onclick = function(event) {
    if (event.target == modal) {
      console.log("hola")
      modal.style.display = "none";
    }
  }
</script>
